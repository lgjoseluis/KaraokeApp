    <!--Link Buttons-->
    <Style Class="PrimaryLinkButton"                
           TargetType="Label">
        <Setter Property="TextColor"                 
                Value="{AppThemeBinding Dark={StaticResource PrimaryColorDark}, Light={StaticResource PrimaryColorLight}}"/>
        <Setter Property="BackgroundColor"
                Value="{StaticResource TransparentColor}"/>
        <Setter Property="TextDecorations" 
                    Value="Underline"/>
    </Style>
    
    
