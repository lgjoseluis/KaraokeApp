<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KaraokeApp.Themes.Buttons">

    <!-- Base Button -->
    <Style x:Key="BaseButton"
           TargetType="Button">
        <Setter Property="TextTransform" 
                    Value="None"/>
        <Setter Property="CornerRadius"
                    Value="8" />
    </Style>

    <Style x:Key="LinkBaseButton"
           TargetType="Button"
           BasedOn="{StaticResource BaseButton}">
        <Setter Property="Padding" 
                    Value="2"/>
        
    </Style>

    <!-- Buttons Colors -->
    <Style Class="PrimaryButton"                
           TargetType="Button"
           BasedOn="{StaticResource BaseButton}">
        <Setter Property="TextColor"                 
                Value="{AppThemeBinding Dark={StaticResource LightColorDark}, Light={StaticResource LightColorLight}}"/>
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Dark={StaticResource PrimaryColorDark}, Light={StaticResource PrimaryColorLight}}"/>
    </Style>    


